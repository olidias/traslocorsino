---
import '../assets/styles/base.css';
import MetaTags from '../components/common/navigation/MetaTags.astro';
import { SITE } from '../config.mjs';
import type { MetaSEO } from '../types';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={meta.language ? meta.language : SITE.language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body class="antialiased text-page bg-light dark:text-slate-300 tracking-tight dark:bg-dark">
    <slot />
    <!-- <BasicScripts /> -->
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
